---
- hosts: localhost
  tasks:
    - name: Update all packages
      pacman:
        update_cache: true
        upgrade: true

    - name: add prompt script
      copy:
        src: prompt.sh
        dest: /etc/profile.d/prompt.sh
        owner: root
        group: root
        mode: 0644

    - name: add aliases script
      copy:
        src: aliases.sh
        dest: /etc/profile.d/aliases.sh
        owner: root
        group: root
        mode: 0644

    - name: add environment script
      copy:
        src: environment.sh
        dest: /etc/profile.d/environment.sh
        owner: root
        group: root
        mode: 0644

    - name: Install /etc/hosts file
      copy:
        src: hosts
        dest: /etc/hosts
        owner: root
        group: root
        mode: 0644

    - name: install NFS package
      pacman:
        name: nfs-utils
        state: present

    - name: Mount home NFS volumes with noauto according to boot option
      ansible.posix.mount:
        src: 172.16.1.74:/nfs/WDNFS
        path: /mnt/WDNFS
        opts: x-systemd.automount,x-systemd.idle-timeout=600
        boot: false
        state: mounted
        fstype: nfs

    - name: Install flatpak
      pacman:
        name: flatpak-builder
        state: present

    - name: Add the flathub flatpak repository remote to the user installation
      community.general.flatpak_remote:
        name: flathub
        state: present
        flatpakrepo_url: https://dl.flathub.org/repo/flathub.flatpakrepo
        method: system

    - name: Install yay dependencies
      pacman:
        name: 
          - git
          - base-devel

    - name: Clone yay-bin from git
      git:
        repo: https://aur.archlinux.org/yay-bin.git
        dest: /tmp/yay-bin

    - name: Install yay-bin from git
      shell: |
        echo "Run these as a nomal user with sudo privleges:"
        echo "cd/tmp/yay-bin"
        echo "makepkg -si "
        exit 0
      args:
         executable: /bin/bash

